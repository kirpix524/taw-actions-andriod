<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_typeactions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.surovcevnv.tawactions.typeactions.TypeActionsActivity"
    tools:showIn="@layout/activity_typeactions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Макет программы учета на производстве"
        android:id="@+id/header" />
    <Button
        android:text="Приход"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:id="@+id/btnComings" />
    <Button
        android:text="Действия"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnComings"
        android:id="@+id/btnActions" />
    <Button
        android:text="Расход"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnActions"
        android:id="@+id/btnExpenses" />
    <Button
        android:text="Остатки"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExpenses"
        android:id="@+id/btnRemaining" />
    <Button
        android:text="Сбросить остатки и движения"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRemaining"
        android:visibility="invisible"
        android:id="@+id/btnInit" />
</RelativeLayout>
